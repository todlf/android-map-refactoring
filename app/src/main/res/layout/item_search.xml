<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="searchData"
            type="campus.tech.kakao.map.data.local.search.SearchData" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/locationImage"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:background="@drawable/location_on_24px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/searchName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{searchData.name}"
            android:textSize="23sp"
            app:layout_constraintStart_toEndOf="@id/locationImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/searchAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{searchData.address}"
            android:textColor="@color/faded"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/locationImage"
            app:layout_constraintTop_toBottomOf="@id/searchName" />

        <TextView
            android:id="@+id/searchCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{searchData.category}"
            android:textColor="@color/faded"
            android:textSize="20sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>